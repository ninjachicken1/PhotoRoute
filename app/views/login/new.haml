%h1 Log In
- form_tag login_path do
  %p
    = label_tag :email
    %br
    = text_field_tag :email, params[:email], { :class => 'text' }
  %p
    = label_tag :password
    %br
    = password_field_tag :password, params[:password], { :class => 'text' }
  %p.button
  .controls
    %button{:class => 'submit action', :type => 'submit'} Log in
