%h1 New User
- form_for :user, @user, :url => { :action => 'create' } do |f|
  %p
    = label_tag :email
    %br
    = f.text_field :name, :class => 'text'
  %p  
    = label_tag :password
    %br
    = f.password_field :password, :class => 'text'
  %p  
    = label_tag :confirm_password
    %br
    = f.password_field :password_confirmation, :class => 'text'
  %p.button
    .controls
      %button{:class => 'submit action', :type => 'submit'} Create
