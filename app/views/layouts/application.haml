%html
  %head
    %title PhotoROUTE
    = stylesheet_link_tag 'photoroute'
  %body#store
    #banner<
      = image_tag 'logo.jpg', :size => '50x40'
      = @page_title || 'PhotoROUTE'
    #columns
      #side
        %a Home
        %br/
        %a FAQ
        %br/
        %a News
        %br/
        %a Contact
        %br/
      #main
        - for name in [:notice, :warning, :message, :error] 
          - if flash[name]
            %div{:id => name.to_s, class => ".rails-notice"} flash[name]          
        = yield :layout